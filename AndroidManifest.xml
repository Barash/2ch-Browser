<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.vortexwolf.dvach"
      android:versionCode="23"
      android:versionName="1.0.76"
      android:installLocation="preferExternal"
      >
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="10"/>
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application android:name=".common.MainApplication" android:icon="@drawable/icon" android:label="@string/app_name">
        <!-- Благодаря параметру configChanges="keyboardHidden|orientation" не вызывается лишний раз onCreate -->
        <activity android:name=".activities.threads.ThreadsListActivity" android:label="@string/app_name" android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="2ch.so" android:pathPattern="/.*/" />
                <data android:scheme="http" android:host="2ch.so" android:pathPattern="/.*/.\\.html" />
                <data android:scheme="http" android:host="2ch.so" android:pathPattern="/.*/1.\\.html" />
            </intent-filter>
        </activity>
		<activity android:name=".activities.posts.PostsListActivity" android:configChanges="keyboardHidden|orientation">
		    <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="2ch.so" android:pathPattern="/.*/res/.*\\.html" />
                <data android:scheme="http" android:host="2ch.so" android:pathPattern="/.*/res/.*\\.html#.*" />
            </intent-filter>
		</activity>
		        
        <activity android:name=".activities.browser.BrowserActivity" android:configChanges="keyboardHidden|orientation"></activity>
		<activity android:name=".activities.boards.PickBoardActivity" android:configChanges="keyboardHidden|orientation"></activity>
		<activity android:name=".activities.addpost.AddPostActivity" android:configChanges="keyboardHidden|orientation"></activity>
		<activity android:name=".activities.files.FilesListActivity" android:configChanges="keyboardHidden|orientation"></activity>
		<activity android:name=".activities.tabs.OpenTabsActivity" android:configChanges="keyboardHidden|orientation" android:noHistory="true"></activity>
		<activity android:name=".settings.ApplicationPreferencesActivity"></activity>		
    </application>
</manifest>